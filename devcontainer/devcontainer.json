{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "remoteUser": "root",
  "containerUser": "root",
  "updateContentCommand": "sudo apt update",
  "postCreateCommand": "sudo chmod +x setup.sh",
  "postAttachCommand": "sudo apt update && sudo apt install -y supervisor",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
